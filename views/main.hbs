    <style>
        .container{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        .container a {
            text-decoration: none;
            transition: all 1s ease-in-out forwards;
        }
        .container a:hover {
            text-decoration: none;
            color: white;
            animation: test 0.5s;
        }
        @keyframes test {
            0%{
                transform:translateX(0);
            }
            33.33%{
                transform:translateX(10px);
            }
            66.66%{
                transform:translateX(-10px);
            }
            100%{
                 transform:translateX(0);
            }
        }
        section{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>
</head>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title> {{title}}</title>
    
    <style>
        table{
            width: 90vw!important;
            
        }
         .nav-link{
            color: white;
            transition: all 0.5s;
        }
        .nav-link:hover{
            color: blue;
            text-decoration: underline;
            animation: shakeYoBooty 0.5s;
        }
        @keyframes shakeYoBooty {
            0%{
                transform:translateX(0);
            }
            33.33%{
                transform:translateX(2px);
            }
            66.66%{
                transform:translateX(-4px);
            }
            100%{
                 transform:translateX(0);
            }
        }
    </style>
</head>
<body class="text-bg-dark" >

    <header>
        <nav class="navbar navbar-expand-md text-bg-secondary">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="#">Kodego</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav gap-md-5 w-75 justify-content-end">
                    <li class="nav-item me-md-4">
                        <a class="nav-link" href="#">Bahay</a>
                    </li>
                    <li class="nav-item me-md-4">
                        <a class="nav-link" href="#">Kubo</a>
                    </li>
                    <li class="nav-item me-md-4">
                        <a class="nav-link" href="#">Kahit</a>
                    </li>
                    <li class="nav-item me-md-4">
                        <a class="nav-link">Munti</a>
                    </li>
                </ul>
                <ul class="navbar-nav gap-3">
                    <li class="nav-item">
                        <a href="/auth/logout" class="btn btn-danger text-center">Log out</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid table-responsive border border-2 p-3 mt-5 border-primary" style="width: 95vw;">
    
    {{#if admin}}
         <h1 class="text-center mt-5">{{title}}</h1>
        <table class="table table-striped table-dark mx-auto table-bordered border-info" >
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Course</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{student_id}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{email}}</td>
                    <td>{{course_name}}</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a href='/auth/updateForm/{{student_id}}' class="btn btn-primary">Edit</a>
                            <a href="/auth/deleteUser/{{student_id}}" class="btn btn-danger" id="delete" onclick="return warning(event)">Delete</a>
                        </div>
                    </td>
                </tr>
            {{/each}}
            </tbody>
             <tfoot>
                <tr>
                    <td colspan="6">
                        <div class="d-flex justify-content-end">
                        <a href="/auth/addStudentForm" class="btn btn-success">Add Student</a>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>

    {{else}}

      <h1 class="text-center">{{title}}</h1>
      <table class="table table-striped table-dark mx-auto table-bordered border-info" >
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Course</th>
    
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{student_id}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{email}}</td>
                    <td>{{course_name}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
    
    
        {{#if message}}
            <h4 class="text-bg-danger text-center">{{message}}</h4>
        {{/if}}
    </div>

    <script>
    function warning(event) {
        let confirmation = confirm("Are you sure you want to delete this user?");
        if (!confirmation) {
            event.preventDefault(); 
        }
        return confirmation;
    }
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>

